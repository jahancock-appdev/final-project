<div>
  <div>
    <h1>
      List of all outing participants
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new outing participant
    </h2>

    <form action="/insert_outing_participant" method="post">
      <div>
        <label for="outing_id_box">
          Outing
        </label>

        <input type="text" id="outing_id_box" name="query_outing_id">
      </div>

      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <div>
        <input type="checkbox" id="participant_submitted_box" name="query_participant_submitted" value="1">

        <label for="participant_submitted_box">Participant submitted</label>
      </div>

      <button>
        Create outing participant
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Outing
        </th>

        <th>
          User
        </th>

        <th>
          Participant submitted
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_outing_participants.each do |an_outing_participant| %>
      <tr>
        <td>
          <%= an_outing_participant.id %>
        </td>

        <td>
          <%= an_outing_participant.outing_id %>
        </td>

        <td>
          <%= an_outing_participant.user_id %>
        </td>

        <td>
          <%= an_outing_participant.participant_submitted %>
        </td>

        <td>
          <%= time_ago_in_words(an_outing_participant.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(an_outing_participant.updated_at) %> ago
        </td>

        <td>
          <a href="/outing_participants/<%= an_outing_participant.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>

<div>
  <div>
    <h1>
      List of all outings
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new outing
    </h2>

    <form action="/insert_outing" method="post">
      <div>
        <input type="checkbox" id="completed_box" name="query_completed" value="1">

        <label for="completed_box">Completed</label>
      </div>

      <div>
        <label for="sender_id_box">
          Sender
        </label>

        <input type="text" id="sender_id_box" name="query_sender_id">
      </div>

      <div>
        <label for="outing_participants_count_box">
          Outing participants count
        </label>

        <input type="text" id="outing_participants_count_box" name="query_outing_participants_count">
      </div>

      <button>
        Create outing
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Completed
        </th>

        <th>
          Sender
        </th>

        <th>
          Outing participants count
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_outings.each do |an_outing| %>
      <tr>
        <td>
          <%= an_outing.id %>
        </td>

        <td>
          <%= an_outing.completed %>
        </td>

        <td>
          <%= an_outing.sender_id %>
        </td>

        <td>
          <%= an_outing.outing_participants_count %>
        </td>

        <td>
          <%= time_ago_in_words(an_outing.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(an_outing.updated_at) %> ago
        </td>

        <td>
          <a href="/outings/<%= an_outing.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>

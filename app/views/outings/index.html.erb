<div>
  <div>
    <h1>
      List of all outings
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new outing
    </h2>

    <form action="/insert_outing" method="post">
      <div>
        <label for="status_box">
          Status
        </label>

        <input type="text" id="status_box" name="query_status">
      </div>

      <button>
        Create outing
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Status
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_outings.each do |an_outing| %>
      <tr>
        <td>
          <%= an_outing.id %>
        </td>

        <td>
          <%= an_outing.status %>
        </td>

        <td>
          <%= time_ago_in_words(an_outing.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(an_outing.updated_at) %> ago
        </td>

        <td>
          <a href="/outings/<%= an_outing.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>

<div>
  <div>
    <h1>
      Outing #<%= @the_outing.id %> details
    </h1>

    <div>
      <div>
        <a href="/outings">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_outing/<%= @the_outing.id %>">
          Delete outing
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Status
      </dt>
      <dd>
        <%= @the_outing.status %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_outing.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_outing.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit outing
    </h2>

    <form action="/modify_outing/<%= @the_outing.id %>"  method="post" >
      <div>
        <label for="status_box">
          Status
        </label>

        <input type="text" id="status_box" name="query_status" value="<%= @the_outing.status %>">
      </div>

      <button>
        Update outing
      </button>
    </form>
  </div>
</div>

<hr>

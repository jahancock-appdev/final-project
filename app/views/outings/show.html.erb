<div>
  <div>
    <h1>
      Outing #<%= @the_outing.id %> details
    </h1>

    <div>
      <div>
        <a href="/outings">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_outing/<%= @the_outing.id %>">
          Delete outing
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Status
      </dt>
      <dd>
        <%= @the_outing.status %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_outing.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_outing.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>
<div>
  <div>
    <h2>
      Add a new invitation
    </h2>

    <form action="/insert_invitation" method="post">
      <div>
            <input type="hidden" name="query_outing_id" value = "<%= @the_outing.id %>">
      </div>

      <div>
        <label for="user_id_box">
          User
        </label>

        <select name="query_user_id" id="user_id_box">
          <% User.all.order(:username).each do |user|%>
            <option value="<%=user.id%>">
              <%= user.username %>
            </option>
          <% end%>
        </select>
      </div>

      <button>
        Create invitation
      </button>
    </form>
  </div>
  <div>
    <form action="/insert_outing_option" method="post">
      <input type="hidden" name="query_outing_id" value="<%= @the_outing.id %>">
      <button>Begin the survey!</button>
    </form>
  </div>
</div>


<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Outing
        </th>

        <th>
          User
        </th>

        <th>
          Status
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_invitations.each do |an_invitation| %>
      <tr>
        <td>
          <%= an_invitation.id %>
        </td>

        <td>
          <%= an_invitation.outing_id %>
        </td>

        <td>
          <%= "#{an_invitation.user.first_name} #{an_invitation.user.last_name}" %>
        </td>

        <td>
          <%= an_invitation.status %>
        </td>

        <td>
          <%= time_ago_in_words(an_invitation.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(an_invitation.updated_at) %> ago
        </td>

        <td>
          <a href="/invitations/<%= an_invitation.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>

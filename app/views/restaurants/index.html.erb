<div>
  <div>
    <h1>
      List of all restaurants
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new restaurant
    </h2>

    <form action="/insert_restaurant" method="post">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <div>
        <label for="address_box">
          Address
        </label>

        <input type="text" id="address_box" name="query_address">
      </div>

      <div>
        <label for="cuisine_box">
          Cuisine
        </label>

        <input type="text" id="cuisine_box" name="query_cuisine">
      </div>

      <div>
        <label for="price_point_box">
          Price point
        </label>

        <input type="text" id="price_point_box" name="query_price_point">
      </div>

      <div>
        <label for="bookmarks_count_box">
          Bookmarks count
        </label>

        <input type="text" id="bookmarks_count_box" name="query_bookmarks_count">
      </div>

      <button>
        Create restaurant
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Address
        </th>

        <th>
          Cuisine
        </th>

        <th>
          Price point
        </th>

        <th>
          Bookmarks count
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_restaurants.each do |a_restaurant| %>
      <tr>
        <td>
          <%= a_restaurant.id %>
        </td>

        <td>
          <%= a_restaurant.name %>
        </td>

        <td>
          <%= a_restaurant.address %>
        </td>

        <td>
          <%= a_restaurant.cuisine %>
        </td>

        <td>
          <%= a_restaurant.price_point %>
        </td>

        <td>
          <%= a_restaurant.bookmarks_count %>
        </td>

        <td>
          <%= time_ago_in_words(a_restaurant.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_restaurant.updated_at) %> ago
        </td>

        <td>
          <a href="/restaurants/<%= a_restaurant.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>

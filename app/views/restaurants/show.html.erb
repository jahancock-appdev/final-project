<div>
  <div>
    <h1>
      Restaurant #<%= @the_restaurant.name %> details
    </h1>
     <div>
        <% @the_restaurant.categories.each do |category|%>
        <span class="badge text-bg-secondary"><%= category.category %></span>
        <% end%>
        </div>
        <hr>
     <% current_bookmark = @current_user.bookmarks.where({ :restaurant_id => @the_restaurant.id}) %>
          <% if current_bookmark.count == 0 %>
            <form action="/insert_bookmark" method="post">
                <input type="hidden" name="query_restaurant_id" value="<%= @the_restaurant.id %>">
           <button>Bookmark!</button>
            </form>
          <% else %>
            <a href="/delete_bookmark/<%= current_bookmark.at(0).id %>">Un-bookmark</a>
          <% end %>
    <div>
      <div>
        <a href="/restaurants">
          Go back
        </a>
      </div>
<hr>
     
    </div>

    <dl>
 
      <dt>
        Address
      </dt>
      <dd>
        <%= @the_restaurant.address %>
      </dd>

      <dt>
        Rating
      </dt>
      <dd>
        <%= @the_restaurant.stars %> (<%= @the_restaurant.review_count %>)
      </dd>

      <dt>
        Number of user saves
      </dt>
      <dd>
        <%= @the_restaurant.bookmarks_count %>
      </dd>

    </dl>
  </div>
</div>

<hr>

<div>
  <div>
    <h1>
      Restaurant #<%= @the_restaurant.id %> details
    </h1>
    <form action="/insert_bookmark" method="post">
      <input type="hidden" name="query_restaurant_id" value="<%= @the_restaurant.id %>">
      <button>Bookmark this restaurant!</button>
    </form>
    <div>
      <div>
        <a href="/restaurants">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_restaurant/<%= @the_restaurant.id %>">
          Delete restaurant
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_restaurant.name %>
      </dd>

      <dt>
        Address
      </dt>
      <dd>
        <%= @the_restaurant.address %>
      </dd>

      <dt>
        Cuisine
      </dt>
      <dd>
        <%= @the_restaurant.cuisine %>
      </dd>

      <dt>
        Price point
      </dt>
      <dd>
        <%= @the_restaurant.price_point %>
      </dd>

      <dt>
        Bookmarks count
      </dt>
      <dd>
        <%= @the_restaurant.bookmarks_count %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_restaurant.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_restaurant.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>
